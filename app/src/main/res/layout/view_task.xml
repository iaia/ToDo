<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>

        <import type="android.view.View" />

        <variable
            name="task"
            type="dev.iaiabot.entity.Task" />

        <variable
            name="title"
            type="String" />

        <variable
            name="editMode"
            type="Boolean" />

        <variable
            name="onOkInSoftKeyboardListener"
            type="dev.iaiabot.todo.bindingadapter.OnOkInSoftKeyboardListener"
            />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/task_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/ic_sticky_note"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        android:state_checked="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{title}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:visibility="@{editMode ? View.GONE : View.VISIBLE}"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="280dp"
            app:layout_constraintHeight_min="280dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="280dp"
            app:layout_constraintWidth_min="280dp"
            tools:text="TODOTODOTODOTODO"
            tools:visibility="visible"
            />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tiet_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:autofillHints="TODO"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="4"
            android:text="@={title}"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textColor="@color/black"
            android:visibility="@{editMode ? View.VISIBLE : View.GONE}"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintDimensionRatio="w,1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_max="280dp"
            app:layout_constraintHeight_min="280dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_max="280dp"
            app:layout_constraintWidth_min="280dp"
            app:onOkInSoftKeyboard="@{() -> onOkInSoftKeyboardListener.onOkInSoftKeyboard()}"
            tools:text="TODOTODOTODOTODOxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
